<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 login-margin-dev">
      <form action="/signin" method="post" id="singin">
        <div class="st_pop_form_heading_wrapper float_left">
          <h3>Đăng nhập</h3>
        </div>
        <p style="color: #ff4444"><%= message[0] %></p>
        <div class="st_profile_input float_left">
          <label>Email</label>
          <input name="email" type="email">
        </div>
        <div class="st_profile_input st_profile__pass_input st_profile__pass_input_pop float_left">
          <label>Mật khẩu</label>
          <input name="password" type="password">
        </div>
        <div class="st_form_pop_fp float_left">
          <h3><a href="#" data-toggle="modal" data-target="#myModa2" target="_blank">Quên mật khẩu?</a></h3>
        </div>
        <div class="st_form_pop_login_btn float_left">
          <button id="submit-signup" type="submit">ĐĂNG NHẬP</button>
        </div>
        
        <div class="st_form_pop_or_btn float_left">
          <h4>or</h4>
        </div>
        <div class="st_form_pop_facebook_btn float_left">
          <a href="signin/auth/facebook"><i class="fa fa-facebook"></i>Đăng nhập bằng Facebook</a>
        </div>
        <div class="st_form_pop_gmail_btn float_left">
          <a href="signin/auth/google"><i class="fa fa-google"></i>Đăng nhập bằng Google</a>
        </div>
        <div class="st_form_pop_signin_btn float_left">
          <h4>Bạn chưa có tài khoản? <a href="/signup">Đăng ký</a></h4>
        </div>
      </form>       
    </div>  
  </div>
</div>