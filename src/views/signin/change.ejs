<div class="container">
  <div class="row">
    <div class="screen-dev">
      <div class="col-md-4 col-md-offset-4 login-margin-dev">
        <form action="/signin/change" method="post" id="forgot">
          <input type="hidden" name="token" value="<%= token %>">
          <div class="st_pop_form_heading_wrapper st_pop_form_heading_wrapper_fpass float_left">
            <p style="color: #ff4444"><%= message[0] %></p>
            <h3>Quên mật khẩu</h3>
            <p>Vui lòng nhập mật khẩu mới!</p>
          </div>
          <div class="st_profile_input float_left">
            <label>Mật khẩu mới</label>
            <input type="password" name="password">
          </div>
          <div class="st_profile_input float_left">
            <label>Xác nhận mật khẩu</label>
            <input type="password" name="verifyPassword">
          </div>
          <div class="st_form_pop_login_btn float_left">
            <button type="submit">THAY ĐỔI MẬT KHẨU</button>
          </div>
        </form>       
      </div>  
    </div>
  </div>
</div>
<script>
  $("#forgot").on("submit", function() {
    $("#preloader").css('display', 'block');
    $("#status").css('display', 'block');
  });
</script>
<%- contentFor('titlePage') %>
  Đổi mật khẩu
<%- contentFor() %>